          let url = "/articles/" + id;
          let title = $("#note_title").val();
          let body = $("#note_body").val();
          console.log("this is the id: " + id);

          let commentObject = {
            title: title,
            body: body
          };

          console.log(commentObject);

          $.post(url, commentObject, function(data) {
            location.reload();
          });
        });

        $("#delete_comment").on("click", function() {
          let id = $(this).data("id");
          console.log(id);

  $.ajax({
    url: "/articles/" + id,
    method: "PUT",
    data: id
  })
  .then(function(data) {
